{
  "name": "template",
  "private": true,
  "scripts": {
    "local": "nodemon",
    "start": "cross-env NODE_ENV=development ts-node ./index.ts",
    "dev": "pnpm run build && cross-env NODE_ENV=development node ./dist/index.js",
    "watch": "concurrently -n \"TSC,JS\" -c \"bgGreen,bgRed\" \"tsc --watch\" \"cross-env NODE_ENV=development && nodemon --config nodemon-dist.json\"",
    "swagger": "ts-node ./app/swagger/swagger.ts",
    "prod": "pnpm run build && cross-env NODE_ENV=production node ./dist/index.js",
    "build": "npx tsc",
    "lint": "eslint . --ext .ts,.js --max-warnings=0",
    "lint:fix": "eslint --fix --ext .js,.ts .",
    "format": "prettier . -w",
    "format:check": "prettier . --check",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "eslint . --ext .ts,.js --max-warnings=0",
      "prettier . -w"
    ],
    "**/*.{json,css,scss,md,webmanifest}": [
      "prettier . -w"
    ]
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/express-rate-limit": "^6.0.2",
    "@types/http-errors": "^2.0.4",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/morgan": "^1.9.4",
    "@types/nodemailer": "^6.4.17",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^3.0.9",
    "@types/passport-local": "^1.0.35",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "@types/ws": "^8.5.14",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.2.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.1",
    "mongoose": "^7.8.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.4",
    "nodemon": "^3.0.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "swagger-autogen": "^2.23.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ws": "^8.18.0"
  }
}
